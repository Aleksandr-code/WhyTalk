    <section class="banner-path">
        <div class="container">
            <div class="banner-path__inner">
                <div class="banner-path__inner-link">
                    Auth  /  
                    <span>Register</span> 
                </div>
                <div class="banner-path__inner-name">
                    Регистрация
                </div>
            </div>
        </div>
    </section>

    <section class="preform">
        <div class="container">
            <div class="preform__inner">
                <div class="preform__form">
                    <div class="preform__form-header">
                        <div class="preform__form-title">Создание нового аккаунта</div>
                        <div class="preform__form-subtitle">
                            Регистрация предельно простая и займет у Вас
                            всего несколько минут
                        </div>   
                    </div>
                    <form action="/auth/register" method="POST">
                        {{#if error}}
                            <div class="preform__form-error">{{error}}</div>
                        {{/if}}
                        <div class="preform__form-input-name">
                            <label for="firstName">Имя</label>
                         </div>
                         <div class="preform__form-input">
                            <input id="firstName" name="firstName" type="text" placeholder="Введите имя..." required>
                         </div>
                         <div class="preform__form-input-name">
                            <label for="lastName">Фамилия</label>
                         </div>
                         <div class="preform__form-input">
                            <input id="lastName" name="lastName" type="text" placeholder="Введите фамилию..." required>
                         </div>
                         <div class="preform__form-input-name">
                            <label for="email">Электронная почта</label>
                         </div>
                         <div class="preform__form-input">
                            <input id="email" name="email" type="email" placeholder="Email" required>
                         </div>
                        <div class="preform__form-input-name">
                            <label for="password">Пароль</label>
                        </div>
                        <div class="preform__form-input">
                            <input id="password" name="password" type="password" placeholder="Введите пароль..." required>
                        </div>
                        <div class="preform__form-input-name">
                            <label for="confirm">Подтвердите пароль</label>
                        </div>
                        <div class="preform__form-input">
                            <input id="confirm" name="confirm" type="password" placeholder="Введите пароль..." required>
                        </div>
                        <input type="hidden" name="_csrf" value={{csrf}}>
                        <button type="submit">Зарегистрироваться</button>
                    </form>
                    <div class="preform__form-auth">
                            У вас уже есть аккаунт? <a href="/auth/login">Авторизоваться</a> 
                    </div>
                </div>
            </div>
        </div>
    </section>